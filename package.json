{
  "name": "side-by-side-pdf",
  "version": "0.1.4",
  "description": "IOF XML â†’ PDF reports generator",
  "main": "dist/index.js",
  "type": "commonjs",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "dev:sample": "tsx src/index.ts src/__fixtures__/sample.xml",
    "clean": "rimraf dist",
    "build": "npm run clean && tsc && npm run copy-assets && npm run copy-templates",
    "copy-assets": "cpy \"src/assets/**/*\" dist/assets",
    "copy-templates": "cpy \"src/templates/**/*\" dist/templates",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch"
  },
  "bin": {
    "side-by-side-pdf": "./dist/index.js"
  },
  "keywords": [],
  "author": "Alex Trukhny",
  "license": "ISC",
  "dependencies": {
    "fast-xml-parser": "^5.3.7",
    "nunjucks": "^3.2.4",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3",
    "playwright": "^1.58.2"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "@types/nunjucks": "^3.2.6",
    "cpy-cli": "^7.0.0",
    "rimraf": "^6.1.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
